@model IEnumerable<Event>

<h2>Events</h2>

<table>
    <thead>
        <tr>
            <th>Event Name</th>
            <th>Date</th>
            <th>Description</th>
            <th>Venue</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model)
        {
            <tr>
                <td>@eventItem.EventName</td>
                <td>@eventItem.EventDate.ToShortDateString()</td>
                <td>@eventItem.Description</td>
                <td>@eventItem.Venue?.VenueName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@eventItem.EventId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@eventItem.EventId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@eventItem.EventId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Create New Event</a>
